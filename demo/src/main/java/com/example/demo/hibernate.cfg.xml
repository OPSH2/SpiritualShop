<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.DB2Dialect</property>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">false</property>
        <mapping class = "com.example.demo.Entities.Product"/>
        <mapping class="com.example.demo.Entities.Order"/>
        <mapping class="com.example.demo.Entities.OrderDetail"/>
        <mapping class="com.example.demo.Entities.Customer"/>
        <mapping class="com.example.demo.Entities.Staff"/>
    </session-factory>
</hibernate-configuration>